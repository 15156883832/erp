                '<span class="unit">元</span>' +
                '</div>' +
                '</div>';
            $("#addedEmps").append($(item2));
        } else {
            var el = item.find('input');
            el.val((parseFloat(amount) + parseFloat(el.val())).toFixed(2));
        }
        if (calc) {
            calcOverall();
        }
    }


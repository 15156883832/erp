    function createEmpSettlementItem(empid, empName, amount, reason, reasonTxt, remark, calc) {
        addedJiesuan.push({
            empId: empid,
            empName: empName,
            amount: amount,
            item: reason,
            remark: remark,
            reasonTxt: reasonTxt,
            delf: false
        });
        if (reason == '2') {
            var payed = conv($("#payed"));
            $("#payed").val((payed + parseFloat(amount)).toFixed(2));
            return;
        }
        var item = $("#" + empid);
        if (item.size() == 0) {
            var item2 = '<div class="f-l mb-10 addedEmpItem" id="' + empid + '">' +

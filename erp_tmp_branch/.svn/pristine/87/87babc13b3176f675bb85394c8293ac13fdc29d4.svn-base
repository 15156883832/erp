//核销类型
function fmtVerificationType(rowData){
	if("1"==rowData.type){
		if("0"==rowData.collection_flag){//0未收款
            return "工单使用";
		}else if("1"==rowData.collection_flag){//1已收款
            return "工单零售";
        }else{
            return "工单使用";
		}
	}else if("2"==rowData.type){
		return "备件归还";
	} else if("3"==rowData.type){
		return "工程师零售";
	} else if("4"==rowData.type){
		return "网点零售";
	}
	return "";
}

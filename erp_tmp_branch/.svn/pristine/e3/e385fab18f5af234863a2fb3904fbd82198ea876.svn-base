	function check(number) {
		var re = /^\d+(?=\.{0,1}\d+$|$)/
		if (!re.test(number)) {
			return false;
		}
		return true;
	}
	
	function checkMoney(mny){
		var reg = /^[1-9]{1}\d*(.\d{1,2})?$|^0.\d{1,2}$/;
		if(parseFloat(mny) == parseFloat(0)){
			return true;
		}else{
			if(reg.test(mny)){
				return true;
			}
		}
		return false;
	}
	
